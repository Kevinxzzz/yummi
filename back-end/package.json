{
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.0",
    "nodemon": "^3.1.11",
    "prisma": "^6.19.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2"
  },
  "scripts": {
    "generate": "prisma generate",
    "prisma:generate": "prisma generate --schema=prisma/schema.prisma",
    "copy-prisma": "node ./scripts/copy-prisma.js",
    "dev": "npm run generate && nodemon --exec ts-node index.ts",
    "build": "tsc -p tsconfig.json && npm run postbuild",
    "postbuild": "npm run prisma:generate && npm run copy-prisma",
    "start": "node dist/index.js",
    "migrate:deploy": "prisma migrate deploy --schema=prisma/schema.prisma",
    "deploy": "npm run build && npm run migrate:deploy && npm run start",
    "postinstall": "prisma generate"
  }
}
